pipeline {
    agent any

    tools {
        nodejs "Node18"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/saurashp/weather-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test || echo "No tests defined"'
            }
        }

        stage('Deploy') {
            steps {
                echo 'âœ… Build successful! (Deploy manually or via Docker in next step)'
            }
        }
    }

    post {
        always {
            echo 'ðŸŽ¯ Jenkins pipeline completed!'
        }
    }
}
